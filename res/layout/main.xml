<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/holo_blue_light">
    <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:id="@+id/space3" android:layout_gravity="center"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="103dp"
            android:text="Add Image"
            android:id="@+id/btn_crop" android:textSize="30dp"
            android:textColor="@android:color/holo_blue_light"/>
    <Space
            android:layout_width="fill_parent"
            android:layout_height="20px"
            android:id="@+id/space2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:id="@+id/textView" android:layout_gravity="center" android:singleLine="true"
            android:textSize="30dp" android:textIsSelectable="false" android:textColor="@android:color/black"/>
    <Space
            android:layout_width="fill_parent"
            android:layout_height="20px"
            android:id="@+id/space1"/>
    <ImageView
            android:id="@+id/iv_photo"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="fill_parent"
            android:layout_height="200dp"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="98dp"
            android:text="Skip"
            android:id="@+id/btn_Skip" android:textSize="30dp"
            android:textColor="@android:color/holo_blue_light"/>
    <Space
            android:layout_width="20px"
            android:layout_height="38dp"
            android:id="@+id/space" android:layout_gravity="center" android:layout_weight="0.18"/>
</LinearLayout>

